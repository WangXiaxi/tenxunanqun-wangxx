*
	padding 0
	margin 0
	font-family Tahoma,"宋体"
a
	cursor pointer
ul
	list-style none
body
	background #fff
	font-size 12px
	& .top-tit
		margin 0 auto
		width 904px
		height 87px
		background-image url(https://aq.qq.com/v2/images/header.jpg)
		& .tit-icon
			width 50%
			float left
			height 87px
		& .right-menu
			float right
			font-size 0
			padding 6px 0 0 0
			line-height 19px
			&>div
				display inline-block
				font-size 12px
				padding-left 9px
			& .diff
				padding-left 3px
				height 17px
				position relative
				& a.cl
					display inline-block
					position relative
					line-height 12px
					border 1px solid #fff
					padding-left 5px
					z-index 1
					background #fff
					padding-top 3px
					padding-bottom 1px
					& i.icon
						display inline-block
						width 8px
						height 8px
						background url(../img/12.PNG)
						background-position -903px -133px
						margin-left 6px
						margin-right 2px
				& .sele
					width 193px
					background #fff
					position absolute
					border 1px solid #959595
					top 17px
					padding 10px
					right 0
					display none
					&:before
						content ""
						width 1px
						height 10px
						position absolute
						top -2px
						right -1px
						background #959595
						z-index 3
					& dl
						& dt
							color #2375b1
							font-weight bold
							display block
							padding 10px 0 0 0
							border-top 1px dashed #d6d6d6	
							margin-top 7px
							&:first-child
								padding-top 0
								margin-top 0
								border-top 1px dashed transparent
						& dd
							line-height 21px
							color #535353	
							font-size 12px
							padding-top 3px
			& .diff:hover a.cl
				border-top 1px solid #959595
				border-left 1px solid #959595
				border-right 1px solid #959595
			& .diff:hover .sele
				display block
			& .diff:hover i.icon
				transform rotate(180deg)
				transition transform 0.3s
	& .menu
		width 100%
		background-image url(https://aq.qq.com/v2/images/header_bg.jpg)
		background-repeat repeat-x
		background-position 0 -85px
		height 41px
		& .inMenu
			margin 0 auto
			width 904px
			li
				float left
			
				
				
					
				
			